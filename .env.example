# Auto Post Generator - Environment Configuration Example
# Copy this file to .env and update with your values

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT=text
LOG_CONSOLE=1

# =============================================================================
# Application Configuration
# =============================================================================
MAX_FILE_SIZE_MB=10
MAX_POSTS_PER_REQUEST=50

# =============================================================================
# Security Configuration
# =============================================================================
SECURE_HEADERS=true
SESSION_TIMEOUT=3600

# =============================================================================
# API Keys (DO NOT COMMIT THESE VALUES)
# =============================================================================
# OpenAI API Key (starts with sk-)
# OPENAI_API_KEY=sk-your-openai-key-here

# Google Gemini API Key (starts with AI)
# GOOGLE_API_KEY=AIyour-google-key-here

# Anthropic API Key (starts with sk-ant-)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# =============================================================================
# Performance Configuration
# =============================================================================
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# =============================================================================
# Development Configuration
# =============================================================================
# Set to true for development mode
DEBUG_MODE=false

# Enable file watcher for development
STREAMLIT_FILE_WATCHER_TYPE=auto

# =============================================================================
# Monitoring Configuration
# =============================================================================
# Enable application metrics
ENABLE_METRICS=false

# Health check endpoint
HEALTH_CHECK_ENABLED=true

# =============================================================================
# Database Configuration (Future Use)
# =============================================================================
# DATABASE_URL=sqlite:///data/app.db
# REDIS_URL=redis://localhost:6379/0